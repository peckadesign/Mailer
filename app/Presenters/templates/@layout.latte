<!DOCTYPE HTML>
<html lang="cs">
<head>
	<meta charset="utf-8">
	<meta name="designer" content="PeckaDesign (www.peckadesign.cz)">

	<meta name="HandheldFriendly" content="True">
	<meta name="MobileOptimized" content="320">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, viewport-fit=cover">
	<meta name="format-detection" content="telephone=no">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<meta name="Copyright" content="PeckaDesign, s.r.o." />
	<meta name="Author" content="PeckaDesign (www.peckadesign.cz)" />

	<title>PeckaDesign Mailer</title>

	<link rel="Stylesheet" href="/styles/styles.css" type="text/css" media="screen,projection" />

	<!-- http://realfavicongenerator.net/faq#why_so_many_files -->
	<link rel="apple-touch-icon" sizes="180x180" href="/img/icon/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/img/icon/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/img/icon/favicon-16x16.png">
	<link rel="manifest" href="/img/icon/site.webmanifest">
	<link rel="mask-icon" href="/img/icon/safari-pinned-tab.svg" color="#e9473f">
	<link rel="shortcut icon" href="/img/icon/favicon.ico">
	<meta name="apple-mobile-web-app-title" content="PeckaDesign Mailer">
	<meta name="application-name" content="PeckaDesign">
	<meta name="msapplication-TileColor" content="#e9473f">
	<meta name="msapplication-config" content="/img/icon/browserconfig.xml">
	<meta name="theme-color" content="#e9473f">
</head>
<body>
	<header class="header">
		<div class="container d-flex align-items-center">
			<a href="{plink :Homepage:}" class="header__logo logo">
				<img src="/img/publicator-logo.svg" alt="PeckaDesign" width="25" height="25" />
			</a>
		</div>
	</header>

	<main class="main">

		<div class="container">
			<h1>Mailer</h1>

			<p n:foreach="$flashes as $flash"
			   n:class="'alert', 'alert-' . $flash->type, 'd-flex align-items-start'">
				{var $isIconCircle = in_array($flash->type, ['success', 'danger'])}

				<i n:class="'icon icon--lg me-1 lh-1', 'icon--' . $flash->type, $isIconCircle ? 'icon--circle'" aria-hidden="true"></i>

				<span class="alert-heading d-flex align-items-end mb-0 lh-sm">
					{$flash->message}
				</span>
			</p>

			{include content}
		</div>
	</main>

	<footer class="footer">
		<div class="container">
			<p class="reset">© <strong>PeckaDesign</strong> 2000–{=date('Y')}</p>
		</div>
	</footer>

	<script type="text/javascript" src="/js/main.js"></script>
</body>
</html>
